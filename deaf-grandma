puts'HELLO DEAR, IT\'S SO GOOD TO SEE YOU!'
byecount=0
while true
  input=gets.chomp
  if input=='BYE'
    byecount=byecount+1
    if byecount==3
      break
    end
  else
    byecount=0
  end
  if input!=input.upcase
    puts'HUH? SPEAK UP, SONNY!'
  else
  randyear=rand(20)+1943
    puts'NO, NOT SINCE '+randyear.to_s+'!'
  end
end
puts'COME VISIT AGAIN SOON, DEAR!'
